---
import NavBarMenu from '@/components/NavBarMenu.astro'
import CiteThis from '@/components/CiteThis.astro'
import '../styles/global.css'
const { title, text, date, pages, currentPage } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <NavBarMenu pages={pages} />
    <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-10">
      <slot />
      <CiteThis title={title} date={date} currentPage={currentPage} />
    </div>
  </body>
</html>
